@if (ViewContext.RouteData.Values["Action"] == "Views")
 {
    if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "Views", new { slug = ViewBag.Slug, page = 1  })
        @Html.ActionLink("< Prev", "Views", new { slug = ViewBag.Slug, page = Model.PageNumber - 1   })    
    }
    else{
        @:<<
        @Html.Raw(" ");
        @:< Prev    
    }
     
    if (Model.HasNextPage)
    {
        @Html.ActionLink("Next >", "Views", new {slug = ViewBag.Slug, page = Model.PageNumber + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Views", new { slug = ViewBag.Slug, page = Model.PageCount  })
    }
    else
    {
        @:Next >
        @Html.Raw(" ")
        @:>>
    }
        
        
        
